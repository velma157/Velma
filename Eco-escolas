<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  // Navega√ß√£o ativa
  const navLinks = document.querySelectorAll('nav a');
  navLinks.forEach(link => {
    link.addEventListener('click', e => {
      navLinks.forEach(l => l.classList.remove('active'));
      e.target.classList.add('active');
    });
  });

  // FAQ toggle
  document.querySelectorAll('.faq h3').forEach(item => {
    item.addEventListener('click', () => {
      const p = item.nextElementSibling;
      p.style.display = p.style.display === 'block' ? 'none' : 'block';
    });
    item.addEventListener('keypress', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        item.click();
      }
    });
  });

  // Quiz
  const quizQuestions = [
    {
      question: 'Qual a principal fonte de energia usada nas escolas sustent√°veis do RN?',
      options: ['Energia solar', 'Energia e√≥lica', 'Energia nuclear', 'Energia f√≥ssil'],
      answer: 0
    },
    {
      question: 'Qual o principal benef√≠cio da energia solar?',
      options: ['Reduz emiss√µes de carbono', 'Aumenta o consumo de √°gua', 'Polui o solo', 'Aumenta o custo de energia'],
      answer: 0
    },
    {
      question: 'O que √© educa√ß√£o ambiental?',
      options: ['Ensinar a cuidar do meio ambiente', 'Ignorar a natureza', 'Construir pr√©dios grandes', 'Usar mais energia el√©trica'],
      answer: 0
    }
  ];

  let currentQuestion = 0;
  const questionEl = document.getElementById('question');
  const optionsEl = document.getElementById('options');
  const submitBtn = document.getElementById('submitBtn');
  const quizResult = document.getElementById('quizResult');

  function loadQuestion() {
    quizResult.textContent = '';
    submitBtn.disabled = true;
    const q = quizQuestions[currentQuestion];
    questionEl.textContent = q.question;
    optionsEl.innerHTML = '';
    q.options.forEach((opt, i) => {
      const li = document.createElement('li');
      const label = document.createElement('label');
      label.textContent = opt;
      const input = document.createElement('input');
      input.type = 'radio';
      input.name = 'option';
      input.value = i;
      input.addEventListener('change', () => submitBtn.disabled = false);
      label.prepend(input);
      li.appendChild(label);
      optionsEl.appendChild(li);
    });
  }

  submitBtn.addEventListener('click', () => {
    const selected = document.querySelector('input[name="option"]:checked');
    if (!selected) return;
    const answer = parseInt(selected.value);
    if (answer === quizQuestions[currentQuestion].answer) {
      quizResult.textContent = 'Resposta correta! üéâ';
      quizResult.style.color = 'green';
    } else {
      quizResult.textContent = 'Resposta errada. Tente novamente!';
      quizResult.style.color = 'red';
    }
    currentQuestion++;
    if (currentQuestion < quizQuestions.length) {
      setTimeout(loadQuestion, 2000);
    } else {
      submitBtn.disabled = true;
      questionEl.textContent = 'Voc√™ completou o quiz!';
      optionsEl.innerHTML = '';
      submitBtn.style.display = 'none';
    }
  });

  loadQuestion();

  // Gr√°fico com Chart.js
  const ctx = document.getElementById('chartCanvas').getContext('2d');
  const chart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Economia de Energia', 'Redu√ß√£o de Carbono', 'Conscientiza√ß√£o Ambiental', 'Engajamento Escolar'],
      datasets: [{
        label: 'Benef√≠cios (%)',
        data: [75, 85, 70, 65],
        backgroundColor: ['#ffca28', '#f57f17', '#4caf50', '#00796b']
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: { display: false },
        tooltip: { enabled: true }
      },
      scales: {
        y: { beginAtZero: true, max: 100, ticks: { stepSize: 20 } }
      }
    }
  });

  // Formul√°rio (simulado)
  const form = document.getElementById('contactForm');
  const formMsg = document.getElementById('formMessage');
  form.addEventListener('submit', e => {
    e.preventDefault();
    formMsg.style.color = '#004d40';
    formMsg.textContent = 'Mensagem enviada com sucesso! Obrigado pelo contato.';
    form.reset();
    setTimeout(() => formMsg.textContent = '', 4000);
  });
</script>
